@page
@model Radyuk.UI.Areas.Admin.Pages.EditModel
@{
    ViewData["Title"] = "Edit";

}

<h1>Edit</h1>

<h4>Bagi</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="bagi.BagId" />

            <div class="form-group">
                <label asp-for="bagi.BagName" class="control-label"></label>
                <input asp-for="bagi.BagName" class="form-control" />
                <span asp-validation-for="bagi.BagName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="bagi.Description" class="control-label"></label>
                <input asp-for="bagi.Description" class="form-control" />
                <span asp-validation-for="bagi.Description" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                @if (!string.IsNullOrEmpty(Model.bagi.Image))
                {
                    <img src=~/Images/@Model.bagi.Image alt="NoSuchFile" width="150" />
                }
                else
                {
                    <h4>Файл изображения не задан</h4>
                }
                <div class="custom-file mt-3">
                    <input type="file" class="custom-file-input"
                           asp-for="Image" id="customFile">
                    <label class="custom-file-label" for="customFile">
                        Выберите файл изображения
                    </label>
                </div>
                <div class="form-group">
                    <label asp-for="bagi.CategoryId" class="control-label"/>
                    <select asp-for="bagi.CategoryId" class="form-control" asp-items="ViewBag.CategoryId"/>
                    <span asp-validation-for="bagi.CategoryId" class="text-danger"/>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    <script src="~/js/bs-custom-file-input.js"></script>
    <script>
        bsCustomFileInput.init();
    </script>
}
}
